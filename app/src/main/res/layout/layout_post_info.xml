<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAvatar"
        android:src="@drawable/k56"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bai toan thap Ha noi ?"
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageAvatar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Created by:"
        android:id="@+id/textView5"
        android:layout_below="@+id/txtTitle"
        android:layout_toRightOf="@+id/imageAvatar"
        android:layout_toEndOf="@+id/imageAvatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Ngo Xuan Quy"
        android:id="@+id/txtAuthor"
        android:layout_below="@+id/txtTitle"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Date:"
        android:id="@+id/txtCreatedDate"
        android:layout_below="@+id/txtTitle"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/txtAuthor"
        android:layout_toEndOf="@+id/txtAuthor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="20/06/2016"
        android:id="@+id/createdAt"
        android:layout_below="@+id/txtTitle"
        android:layout_toRightOf="@+id/txtCreatedDate"
        android:layout_toEndOf="@+id/txtCreatedDate" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/view"
        android:layout_alignBottom="@+id/numView"
        android:layout_toRightOf="@+id/imageAvatar"
        android:layout_toEndOf="@+id/imageAvatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="10sp"
        android:id="@+id/numView"
        android:layout_marginLeft="2dp"
        android:layout_alignBottom="@+id/imageAvatar"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/comment"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/numView"
        android:layout_toRightOf="@+id/numView"
        android:layout_toEndOf="@+id/numView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10sp"
        android:id="@+id/numComment"
        android:layout_marginLeft="2dp"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/arrows"
        android:layout_alignBottom="@+id/createdAt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>