<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/layout_post_content"
    android:layout_margin="10dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/k56"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name "
        android:id="@+id/postUser"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="create at :  "
        android:id="@+id/createdDatePost"
        android:layout_below="@+id/postUser"
        android:layout_toRightOf="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vien CNTT"
        android:id="@+id/schoolPost"
        android:layout_below="@+id/createdDatePost"
        android:layout_toRightOf="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CACH CHOI LMHT"
            android:background="#f9f3f3"
            android:id="@+id/titlePost"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/schoolPost"
           />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/scrollView"
            android:layout_marginTop="20dp"
            android:background="#f9f3f3"
            android:scrollbars="horizontal"
            android:layout_below="@+id/titlePost"
            android:layout_centerHorizontal="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Noi dung bai viet..."
                android:layout_gravity="left"
                android:id="@+id/contentPost" />
        </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="13/12/2015"
        android:id="@+id/datePost"
        android:layout_toRightOf="@+id/createdDatePost"
        android:layout_below="@+id/postUser"
        android:layout_toEndOf="@+id/createdDatePost" />


</RelativeLayout>