<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgk56"
        android:layout_alignParentTop="true"
        android:src="@drawable/k56"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sinh viên khóa 56"
        android:id="@+id/txK56"
        android:layout_toRightOf="@+id/imgk56"
        android:layout_toEndOf="@+id/imgk56" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Số bài viết : "
        android:id="@+id/textView2"
        android:layout_below="@+id/txK56"
        android:layout_toRightOf="@+id/imgk56"
        android:layout_toEndOf="@+id/imgk56" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20"
        android:id="@+id/post1"
        android:layout_below="@+id/txK56"
        android:layout_toRightOf="@+id/textView2"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/transfer"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Số thành viên : "
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/imgk56"
        android:layout_toRightOf="@+id/imgk56" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20"
        android:id="@+id/member1"
        android:layout_below="@+id/post1"
        android:layout_toRightOf="@+id/textView3"
        />

</RelativeLayout>